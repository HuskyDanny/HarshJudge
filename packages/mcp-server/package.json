{
  "name": "@allenpan/harshjudge-mcp",
  "version": "0.3.2",
  "description": "AI-native E2E testing orchestration MCP server for Claude Code. Create, run, and manage end-to-end test scenarios with visual evidence capture.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "harshjudge-mcp": "./dist/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc --build",
    "dev": "tsc --build --watch",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest run",
    "start": "node ./dist/server.js",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "e2e-testing",
    "testing",
    "automation",
    "ai",
    "anthropic"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "mcpName": "io.github.allenpan/harshjudge",
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/harshjudge.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/anthropics/harshjudge#readme",
  "bugs": {
    "url": "https://github.com/anthropics/harshjudge/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.9",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@harshjudge/shared": "workspace:*",
    "@harshjudge/ux": "workspace:*",
    "@types/js-yaml": "^4.0.9",
    "memfs": "^4.6.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  }
}
